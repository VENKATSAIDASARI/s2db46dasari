extends layout
block content
  h1= title 
  p Welcome to the Dog shop
  div(class="container-fluid")
        div(class="row")
            - let results =  thedog                   
            each v,index in results
             -let destination = `dispatch(\"/dog/update?id=${v._id}\")`
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.Dog_name} - #{v.Dog_color} - #{v.price}
                
                button.btn( class="btn-primary " class="m-1" class="btn-toolbar", onclick= destinationcreate) Create
                button.btn( class="btn-danger" class="m-1" class="btn-toolbar", onclick= destinationdelete) Delete
                button.btn( class="btn-primary"  class="m-1" class="btn-toolbar", onclick= destination) Update



  script.                
        function buy(intemNo)
        {
              alert(`you purchased Item ${intemNo+1}`)
        }
        function dispatch(path){
           window.location.href=path
         }