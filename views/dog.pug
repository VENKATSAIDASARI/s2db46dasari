extends layout
block content
  h1= title 
  p Welcome to the Dog shop
  div(class="container-fluid")
        div(class="row")
            - let results =  thedog                   
            each v,index in results
             -let destination = `dispatch(\"/dogs/update?id=${v._id}\")`
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.Dog_name} - #{v.Dog_color} - #{v.price}
                button.btn( class="btn-primary ml-1", onclick= destination) Update



  script.                
        function buy(intemNo)
        {
              alert(`you purchased Item ${intemNo+1}`)
        }
        function dispatch(path){
           window.location.href=path
         }